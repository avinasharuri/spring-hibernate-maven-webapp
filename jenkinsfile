 pipeline {
        agent any
        tools {
                maven 'maven'
        }
  stages {
        stage(scm) {
          steps {
                git 'https://github.com/avinasharuri/spring-hibernate-maven-webapp.git'
          }
        }

        stage (compile) {
          steps {
                sh 'mvn compile'
                }
                        }

        stage (test) {
          steps {
                sh 'mvn test'
                }
                }
        stage (package) {
          steps {
                node ('slave1'){
                git 'https://github.com/avinasharuri/spring-hibernate-maven-webapp.git'
                sh 'mvn package -Dskiptests'
                }
          }
        }
        stage (sonar_code_analysis) {
          steps {
                sh sonar:sonar
          }
        }
        }
}
       
       
